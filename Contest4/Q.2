/*
Number of Islands
*/


class Solution {
    public int numIslands(char[][] arr) {
        boolean [][] visited=new boolean[arr.length][arr[0].length];
      int count=0;
      for(int i=0;i<arr.length;i++){
          for(int j =0;j<arr[i].length;j++){
              if(arr[i][j]=='1' && visited[i][j]==false){
                  helper(arr,i,j,visited);
                  count++;
              }
          }
      }
        return count;
    }
    
    public static void helper(char [][]arr,int i,int j,boolean[][] visited){
       if(i<0 || j<0|| i>=arr.length ||j>=arr[i].length ||arr[i][j]=='0' || visited[i][j]==true ){
           return;
       }
       
       visited[i][j]=true;
       helper(arr,i-1,j,visited);
       helper(arr,i-1,j+1,visited);
       helper(arr,i,j+1,visited);
       helper(arr,i+1,j+1,visited);
       helper(arr,i+1,j,visited);
       helper(arr,i+1,j-1,visited);
       helper(arr,i,j-1,visited);
       helper(arr,i-1,j-1,visited);
   }
}
